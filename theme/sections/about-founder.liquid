<section class="h-svh w-full flex divide-x-2 divide-solid divide-[#5B5546]" id="founder">
    <div class="relative w-1/2 h-full">
        <img class="absolute h-full w-full object-cover" alt="founder-image" src={{ section.settings.founder-image | image_url }} />
    </div>
    <div class="bg-[#EBECE6] w-1/2 flex flex-col justify-center px-32">
        <h3 class="font-americana text-3xl uppercase tracking text-[#5B5546]">
            {{ section.settings.founder-header }}
        </h3>
        <div class="flex flex-col gap-6 mt-12">
            <p class="font-lato text-sm text-[#5B5546]">
                {{ section.settings.founder-text }}
            </p>
        </div>
    </div>
</section>

